@{
    ViewData["Title"] = "Login Page";
}
@model dotnetprojekt.Models.User

<!-- Adding Font Awesome CSS for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="w-full h-screen flex justify-center items-center bg-gradient-to-r from-beige-100 via-beige-200 to-beige-300">
    <div class="w-full max-w-md">
        <div class="flex flex-col items-center mb-8">
            <div class="w-20 h-20 rounded-full bg-gradient-to-br from-beige-400 to-beige-500 flex items-center justify-center shadow-lg mb-4">
                <i class="fas fa-wine-bottle text-white text-3xl"></i>
            </div>
            <h1 class="text-3xl font-extrabold text-beige-800 drop-shadow">Welcome Back</h1>
            <p class="text-beige-600 mt-1">Please sign in to continue</p>
        </div>

        <form class="bg-beige-50/80 backdrop-blur-lg shadow-2xl rounded-2xl px-10 pt-10 pb-8 mb-4 border border-beige-200 transition-all duration-300 hover:shadow-[0_8px_32px_0_rgba(194,172,128,0.37)]" asp-controller="Login" asp-action="Verify" id="form" method="post">
            <div class="mb-7">
                <label class="block text-beige-800 text-sm font-semibold mb-2" for="username">
                    Username
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-beige-400">
                        <i class="fas fa-user"></i>
                    </div>
                    <input asp-for="@Model.Username" class="shadow appearance-none border border-beige-300 rounded-lg w-full py-3 pl-11 pr-3 text-beige-900 leading-tight focus:outline-none focus:ring-2 focus:ring-beige-400 focus:border-transparent transition duration-200 bg-beige-50/90 hover:bg-beige-100/90" id="username" type="text" placeholder="Enter your username" autocomplete="username">
                </div>
                <span asp-validation-for="@Model.Username" class="error text-red-500 text-xs mt-1 block"></span>
            </div>
            <div class="mb-7">
                <label class="block text-beige-800 text-sm font-semibold mb-2" for="password">
                    Password
                </label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none text-beige-400">
                        <i class="fas fa-lock"></i>
                    </div>
                    <input asp-for="@Model.Password" class="shadow appearance-none border border-beige-300 rounded-lg w-full py-3 pl-11 pr-3 text-beige-900 leading-tight focus:outline-none focus:ring-2 focus:ring-beige-400 focus:border-transparent transition duration-200 bg-beige-50/90 hover:bg-beige-100/90" id="password" type="password" placeholder="Enter your password" autocomplete="current-password">
                </div>
                <span asp-validation-for="@Model.Password" class="error text-red-500 text-xs mt-1 block"></span>
            </div>
            
            @if (ViewBag.message != null)
            {
                <div class="mb-5 p-3 bg-red-100/80 border-l-4 border-red-500 rounded-lg animate-pulse">
                    <div class="flex items-center">
                        <i class="fas fa-exclamation-circle text-red-500 mr-2"></i>
                        <span class="text-red-700 font-medium">@ViewBag.message</span>
                    </div>
                </div>
            }
            
            <div class="mb-6">
                <div class="flex items-center">
                    <input id="remember-me" type="checkbox" class="h-4 w-4 text-beige-500 focus:ring-beige-400 border-beige-300 rounded">
                    <label for="remember-me" class="ml-2 block text-sm text-beige-800 select-none">
                        Remember me
                    </label>
                </div>
            </div>
            
            <div class="flex flex-col gap-4">
                <button class="w-full bg-gradient-to-r from-beige-400 to-beige-500 hover:from-beige-500 hover:to-beige-600 text-beige-900 font-bold py-3 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-beige-400 focus:ring-offset-2 shadow-md transition-all duration-200 flex justify-center items-center text-lg tracking-wide" type="submit">
                    <i class="fas fa-sign-in-alt mr-2"></i> Sign In
                </button>
                <div class="text-center">
                    <a class="inline-block align-baseline font-medium text-sm text-beige-700 hover:text-beige-900 transition duration-200" asp-controller="Auth" asp-action="Register">
                        Don't have an account? <span class="underline">Sign up</span>
                    </a>
                </div>
            </div>
        </form>
        <div class="text-center text-beige-400 text-xs mt-4">
            <p>&copy; @DateTime.Now.Year Wine Lovers. All rights reserved.</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


